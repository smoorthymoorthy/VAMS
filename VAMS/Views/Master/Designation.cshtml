
@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .bootbox {
        padding-top: 10% !important;
    }
</style>

<section>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-6">
                    <div class="navbar-header">
                        <div class="navbar-brand" style="background-color:#CE252B !important; color:white !important; border-radius:10px !important;"> Department <b>></b> @*Building*@ </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <button type="button" class="btn btn-success pull-right" onclick="showModal()"> New </button>
                </div>
            </div>
        </div>

        <br />
        <br />

        <div class="row">
            <div class="col-md-12 alert alert-big alert-danger alert-dismissable fade in margin-top-10"
                 id="divErrormsgCommon" style="display:none!important;">
                <div id="lblErrorCommon"></div>
            </div>

            <div class="col-md-12 alert alert-big alert-success alert-dismissable fade in margin-top-10"
                 id="divSuccessmsg" style="display:none!important;">
                <div id="lblSuccess"></div>
            </div>


        </div>
        <div class="row">
            <div class="col-md-12 col-sm-12 col-lg-12">
         
                <div class="col-md-3 col-sm-3 col-lg-3">
                    <select class="form-control" id="ddldepartment"><option>Department</option></select>
                </div>
                <div class="col-md-2 col-sm-2 col-lg-2"></div>
            </div>
        </div>
        <br />

        <div class="col-md-12 col-sm-12 col-lg-12">
            <div id="dvTable">
            </div>
        </div>

    </div>

</section>

<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog" data-backdrop="static" data-keyboard="false" style="top:10% !important">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Designation</h4>
            </div>
            <div class="modal-body">

                <div class="col-md-12 alert alert-big alert-danger alert-dismissable fade in margin-top-10"
                     id="divErrormsg" style="display:none!important;">
                    <div id="lblError"></div>
                </div>

                <div class="col-md-12 alert alert-big alert-success alert-dismissable fade in margin-top-10"
                     id="divSuccessmsg" style="display:none!important;">
                    <div id="lblSuccess"></div>
                </div>

                <div class="row">
                    <div class="col-md-12 col-sm-12 col-lg-12">
                        <div class="col-md-2 col-sm-2 col-lg-2"></div>
                        <div class="col-md-8 col-sm-8 col-lg-8">                           
                            <select class="form-control" id="ddldepartmentpopup"><option>Department</option></select>
                        </div>
                        <div class="col-md-2 col-sm-2 col-lg-2"></div>
                    </div>
                </div>
                <br />

                <div class="row">
                    <div class="col-md-12 col-sm-12 col-lg-12">
                        <div class="col-md-2 col-sm-2 col-lg-2"></div>
                        <div class="col-md-8 col-sm-8 col-lg-8">
                            <input type="hidden" id="hdnDesignationID" value="0" />
                            <input type="text" class="form-control" placeholder=Designation id="txtDesignation" />
                        </div>
                        <div class="col-md-2 col-sm-2 col-lg-2"></div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-lg-12">
                        <div class="col-md-2 col-sm-2 col-lg-2"></div>
                        <div class="col-md-8 col-sm-8 col-lg-8">
                            <input type="text" class="form-control" placeholder=DesignationShortName id="txtDesignationShort" />
                        </div>
                        <div class="col-md-2 col-sm-2 col-lg-2"></div>
                    </div>
                </div>



            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Save()">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

            </div>
        </div>

    </div>
</div>

